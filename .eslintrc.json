{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "$": false,
    "jQuery": false
  },
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "no-console": "warn",
    "no-unused-vars": "warn",
    "prettier/prettier": ["error", {
      "printWidth": 120,
      "singleQuote": true
    }]
  }
}
